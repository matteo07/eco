<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_ldpi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pier.dirittoprivato.TestActivity">


    <Button
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btD"
        android:layout_alignBaseline="@+id/btC"
        android:layout_alignBottom="@+id/btC"
        android:layout_toEndOf="@+id/btC"
        android:backgroundTint="@color/teal100"/>

    <Button
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btB"
        android:layout_marginEnd="58dp"
        android:layout_alignBaseline="@+id/btA"
        android:layout_alignBottom="@+id/btA"
        android:layout_alignEnd="@+id/rx4"
        android:backgroundTint="@color/teal100"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btC"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btB"
        android:backgroundTint="@color/teal100"
        />

    <Button
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btA"
        android:layout_above="@+id/btC"
        android:layout_alignStart="@+id/btC"
        android:backgroundTint="@color/teal100"/>





    <TextView
        android:textSize="10sp"
        android:text="domanda"
        android:layout_width="@dimen/textview_width"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/Domanda"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp" />


    <TextView
        android:textSize="@dimen/font_size_ldpi"
        android:text="B) R2"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/textview_width"
        android:id="@+id/rx2"
        android:layout_below="@+id/rx1"
        android:layout_alignStart="@+id/rx1"
        android:layout_height="60dp" />

    <TextView
        android:textSize="@dimen/font_size_ldpi"
        android:text="C) R3"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/textview_width"
        android:id="@+id/rx3"
        android:layout_below="@+id/rx2"
        android:layout_alignStart="@+id/rx2"
        android:layout_height="60dp" />

    <TextView
        android:textSize="@dimen/font_size_ldpi"
        android:text="D) R4"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/textview_width"
        android:id="@+id/rx4"
        android:layout_below="@+id/rx3"
        android:layout_alignStart="@+id/rx3"
        android:layout_height="60dp" />

    <TextView
        android:textSize="@dimen/font_size_ldpi"
        android:text="A) R1"
        android:layout_width="@dimen/textview_width"
        android:id="@+id/rx1"
        android:layout_height="60dp"
        android:layout_below="@+id/Domanda"
        android:layout_alignStart="@+id/Domanda" />

</RelativeLayout>
